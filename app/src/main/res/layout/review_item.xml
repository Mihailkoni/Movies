<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="24dp"
    app:cardUseCompatPadding="true"
    tools:backgroundTint="@android:color/holo_red_dark">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutReviewItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/textViewReviewAuthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="@string/review_author"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/textViewReviewType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="@string/review_type"
            app:layout_constraintTop_toBottomOf="@id/textViewReviewAuthor"/>

        <TextView
            android:id="@+id/textViewReview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textColor="@color/white"
            tools:text="Текст отзыва"
            app:layout_constraintTop_toBottomOf="@id/textViewReviewType"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>